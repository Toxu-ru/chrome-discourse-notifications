{
    "name": "__MSG_extName__",
    "description": "__MSG_extDescription__",
    "version": "0.1",
    "author": "Alessandro Polidori",
    "manifest_version": 2,
    "default_locale": "en",
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "background": {
        "scripts": [
            "lib/jquery-2.1.3.min.js",
            "js/background.js"
        ]
    },
    "permissions": [
        "storage",
        "http://*/",
        "https://*/"
    ],
    "icons": {
        "16":  "img/logo16.png",
        "32":  "img/logo32.png",
        "48":  "img/logo48.png",
        "128": "img/logo128.png",
        "256": "img/logo256.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "img/logo_bn19.png",
            "38": "img/logo38.png"
        }
    }
}